 <div class="game-container">

    <div class="game-main-area">
        <div class="scratch-card-wrapper">
            <div class="scratch-card" id="scratchCard">
                <canvas id="scratchCanvas"></canvas>
                <div class="scratch-symbols" id="scratchSymbols">
                </div>
                <div class="scratch-overlay" id="scratchOverlay">
                    <div class="scratch-instruction">
                        <i class="fas fa-hand-pointer"></i>
                        <p>Toque para jogar!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="game-controls-panel">
        <div class="game-header">
            <div class="game-stats">
                <div class="stat-item">
                    <span class="stat-value" id="totalGames">0</span>
                    <span class="stat-label">Jogos</span>
                </div>
                <div class="stat-item">
                    <span class="stat-value" id="totalWins">0</span>
                    <span class="stat-label">VitÃ³rias</span>
                </div>
                <div class="stat-item">
