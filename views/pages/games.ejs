                    <span class="stat-label">Taxa</span>
                </div>
            </div>
        </div>

        <div class="game-cost">
            <i class="fas fa-coins"></i>
            <span>Custo: R$ <%= gameCost.toFixed(2) %></span>
        </div>
        
        <div class="control-buttons">
            <button class="btn-play" id="playBtn">
                <i class="fas fa-play"></i>
                <span>JOGAR</span>
            </button>
            
            <button class="btn-auto" id="autoBtn">
                <i class="fas fa-magic"></i>
                <span>AUTO</span>
            </button>
        </div>

        <div class="auto-controls" id="autoControls">
            <div class="auto-settings">
                <input type="number" id="autoGames" min="1" max="50" value="10" placeholder="Jogos">
                <button class="btn-start-auto" id="startAutoBtn">
                    <i class="fas fa-play-circle"></i>
                    <span>INICIAR</span>
                </button>
                <button class="btn-stop-auto" id="stopAutoBtn">
                    <i class="fas fa-stop-circle"></i>
                    <span>PARAR</span>
                </button>
            </div>
        </div>

        <div class="prize-display" id="prizeDisplay">
